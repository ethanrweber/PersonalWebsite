@using PersonalWebsite.Other.HelperClasses

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Constants.SiteName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body id="body">
    <style>
        #body {
            background-image: url("../images/ethan_landscape_16x9_blur.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center center;
            background-size: cover;
        }
    </style>

    @* Navbar *@
    <div class="container">
        <nav id="ew-navbar" class="ew-popout-box navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Ethan Weber</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <vc:Navbar></vc:Navbar>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="ew-footer" class="ew-popout-box border-top footer text-muted">
        <div class="container">
            &copy; 2021 - @Constants.SiteName - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <partial name="_Pager" model="@NavbarConstants.GetPagerValues(ViewData["CurrentPage"] as string)" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
